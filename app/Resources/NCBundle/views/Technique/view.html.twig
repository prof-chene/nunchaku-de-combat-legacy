{% extends '::layout.html.twig' %}

{% block content %}
    <article>
        <header>
            <h1>{{ technique.title }}</h1>
            <ul class="list-unstyled">
                {% for tag in technique.tags if tag.enabled %}
                    <li class="label label-primary">{{ tag.name }}</li>
                {% endfor %}
            </ul>
            {% media technique.image, 'reference' with {'class': 'img-responsive center-block'} %}
        </header>
        <p class="post">
            {{ technique.content|raw }}
        </p>
    </article>
{% endblock %}
