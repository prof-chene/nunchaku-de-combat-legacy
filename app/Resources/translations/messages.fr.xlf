        <body>
            <!-- Registration and login -->
            <trans-unit id="username">
                <source>username</source>
                <target>Nom d'utilisateur</target>
            </trans-unit>
            <trans-unit id="email">
                <source>email</source>
                <target>E-mail</target>
            </trans-unit>
            <trans-unit id="password">
                <source>password</source>
                <target>Mot de passe</target>
            </trans-unit>
            <trans-unit id="password_confirmation">
                <source>password_confirmation</source>
                <target>Retapper le mot de passe</target>
            </trans-unit>
            <trans-unit id="remember_me">
                <source>remember_me</source>
                <target>Se souvenir de moi</target>
            </trans-unit>
            <trans-unit id="connection">
                <source>connection</source>
                <target>Connexion</target>
            </trans-unit>
            <trans-unit id="registration_submit">
                <source>registration.submit</source>
                <target>Je m'inscris</target>
            </trans-unit>
            <trans-unit id="bad_credentials">
                <source>Bad credentials.</source>
                <target>Nom d'utilisateur ou mot de passe incorrect</target>
            </trans-unit>
            <trans-unit id="user_create_success">
                <source>user.create.success</source>
                <target>L'utilisateur a été créé avec succès</target>
            </trans-unit>
            <trans-unit id="registration_check_email">
                <source>registration.check_email</source>
                <target>Un e-mail a été envoyé à l'adresse %email%. Il contient un lien d'activation sur lequel il vous faudra cliquer afin d'activer votre compte. Pensez à vérifier votre dossier spam.</target>
            </trans-unit>
            <trans-unit id="registration_confirmed">
                <source>registration.confirmed</source>
                <target>Félicitations %username%, votre compte a bien été activé</target>
            </trans-unit>
            <!-- User's profile -->
            <trans-unit id="profile_show_link">
                <source>profile.show.link</source>
                <target>Voir mon profil</target>
            </trans-unit>
        </body>
