<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Nunchaku de combat{% endblock %}</title>
        {# favicon across multiple devices/platforms #}
        <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('images/favicon/apple-touch-icon-57x57.png') }}">
        <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('images/favicon/apple-touch-icon-60x60.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('images/favicon/apple-touch-icon-72x72.png') }}">
        <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('images/favicon/apple-touch-icon-76x76.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('images/favicon/apple-touch-icon-114x114.png') }}">
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('images/favicon/apple-touch-icon-120x120.png') }}">
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('images/favicon/apple-touch-icon-144x144.png') }}">
        <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('images/favicon/apple-touch-icon-152x152.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicon/apple-touch-icon-180x180.png') }}">
        <link rel="icon" sizes="32x32" type="image/png" href="{{ asset('images/favicon/favicon-32x32.png') }}">
        <link rel="icon" sizes="192x192" type="image/png" href="{{ asset('images/favicon/android-chrome-192x192.png') }}">
        <link rel="icon" sizes="96x96" type="image/png" href="{{ asset('images/favicon/favicon-96x96.png') }}">
        <link rel="icon" sizes="16x16" type="image/png" href="{{ asset('images/favicon/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('images/favicon/manifest.json') }}">
        <link rel="mask-icon" href="{{ asset('images/favicon/safari-pinned-tab.svg') }}" color="#7d0404">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="msapplication-TileImage" content="/mstile-144x144.png">
        <meta name="theme-color" content="#ffffff">
        {% javascripts
            'js/jquery/jquery.min.js'
            'js/jquery/*'
            'js/bootstrap/*'
            'bundles/sonatacore/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js'
            'bundles/nc/js/*'
            output='assetic/nc.js'
        %}
            <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
        {% block javascripts %}
        {% endblock %}
        {% stylesheets
            'css/bootstrap/*'
            'bundles/sonatacore/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css'
            'bundles/nc/css/*'
            filter='cssrewrite'
            output='assetic/nc.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        {% include '::header.html.twig' %}
        {{ include('::flash_messages.html.twig') }}
        <section class="container">
            {# If a translation exists for the current route, we display it as the main title #}
            {% if ('h1.'~app.request.attributes.get('_route'))|trans({}, 'navigation') != 'h1.'~app.request.attributes.get('_route') %}
                <h1>{{ ('h1.'~app.request.attributes.get('_route'))|trans({}, 'navigation') }}</h1>
            {% endif %}
            {% block content %}
            {% endblock %}
        </section>
        {% include '::footer.html.twig' %}
    </body>
</html>
